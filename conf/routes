# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()

#Displaying question with answers and comments
GET        /questions/:id        controllers.QuestionView.viewQuestion(id: Long)

POST        /questions/:id      controllers.QuestionView.addAnswer(id:Long)
# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

GET        /questions           controllers.Application.questions(subject: String)